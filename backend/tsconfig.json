{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "baseUrl": "./"
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
